[32m+[m[32m        results = [][m
[32m+[m[32m        for p in PORTS_TO_SCAN:[m
[32m+[m[32m            ok = await _scan_port("127.0.0.1", p, timeout=0.7)[m
[32m+[m[32m            results.append(f"{p}: {'OPEN' if ok else 'closed'}")[m
[32m+[m[32m        await query.edit_message_text("\n".join(results))[m
